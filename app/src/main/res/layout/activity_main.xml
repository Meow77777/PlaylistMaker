<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MainBackgroundColorStyle"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding4"
        android:layout_marginTop="@dimen/padding4"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="@dimen/padding4"
        android:paddingStart="@dimen/padding12"
        android:paddingTop="10dp"
        android:paddingBottom="@dimen/padding12"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/main_view_size"
        android:textFontWeight="500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding16"
        android:layout_marginTop="24dp"
        android:layout_marginRight="@dimen/padding16"
        android:orientation="vertical">

        <Button
            android:id="@+id/poisk_button"
            android:text="@string/poisk"
            app:icon="@drawable/search"
            style="@style/MainButtonStyle" />

        <Button
            android:id="@+id/mediateka_button"
            android:layout_marginTop="@dimen/padding16"
            android:text="@string/mediateka"
            app:icon="@drawable/mediateka"
            style="@style/MainButtonStyle" />

        <Button
            android:id="@+id/settings_button"
            android:layout_marginTop="@dimen/padding16"
            android:layout_marginBottom="28dp"
            android:text="@string/settings"
            app:icon="@drawable/settings"
            style="@style/MainButtonStyle" />
    </LinearLayout>

</LinearLayout>
