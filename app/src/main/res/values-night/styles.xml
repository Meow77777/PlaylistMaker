<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabBackground">@color/black_main</item>
    </style>

    <style name="MainBackgroundColorStyle">
        <item name="android:background">@color/black_main</item>
    </style>

    <style name="SettingsBackgroundColorStyle">
        <item name="android:background">@color/black_main</item>
    </style>

    <style name="TextSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="IconSettingsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MainTextSettingsStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_view_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BackButtonSettingsStyle">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TextEditStyle">
        <item name="android:paddingStart">@dimen/padding12</item>
        <item name="android:paddingEnd">@dimen/padding40</item>
        <item name="android:paddingVertical">@dimen/padding10</item>
        <item name="android:drawablePadding">@dimen/padding8</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/black_main</item>
        <item name="android:textSize">@dimen/settings_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableTint">@color/black_main</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_main</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_view_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="DeleteSearchButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingVertical">@dimen/padding10</item>
        <item name="android:paddingHorizontal">@dimen/padding12</item>
        <item name="android:tint">@color/black_main</item>
    </style>

    <style name="SongSearchListImage">
        <item name="android:layout_width">@dimen/size45</item>
        <item name="android:layout_height">@dimen/size45</item>
        <item name="android:layout_marginVertical">@dimen/padding8</item>
        <item name="android:layout_marginStart">@dimen/size13</item>
    </style>

    <style name="SongSearchListName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/settings_size</item>
    </style>

    <style name="SongSearchListAuthor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="SongSearchListTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="drawableTint">@color/white</item>
        <item name="drawableStartCompat">@drawable/dot</item>
    </style>

    <style name="NoInternetImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/no_internet_dark</item>
    </style>

    <style name="NothingFoundImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/nothing_found_dark</item>
    </style>

    <style name="TextSearchProblem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ResetButtonSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/size54</item>
        <item name="android:text">@string/reset</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/size334</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="YouSearchedText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/youSearched</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/size18</item>
        <item name="android:paddingBottom">@dimen/padding12</item>
    </style>

    <style name="TitleTrackInfoValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginStart">@dimen/padding16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginTop">@dimen/padding16</item>
        <item name="android:layout_marginEnd">@dimen/padding16</item>
    </style>

    <style name="SongTimeTrackInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding4</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddToFavorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@color/gray</item>

    </style>

    <style name="PlayButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black_main</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SongAuthorNameTrackInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SongNameTrackInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>