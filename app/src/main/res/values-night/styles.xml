<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainBackgroundColorStyle">
        <item name="android:background">@color/black_main</item>
    </style>

    <style name="SettingsBackgroundColorStyle">
        <item name="android:background">@color/black_main</item>
    </style>

    <style name="TextSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="IconSettingsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MainTextSettingsStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_view_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BackButtonSettingsStyle">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TextEditStyle">
        <item name="android:paddingStart">@dimen/padding12</item>
        <item name="android:paddingEnd">@dimen/padding40</item>
        <item name="android:paddingVertical">@dimen/padding10</item>
        <item name="android:drawablePadding">@dimen/padding8</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/black_main</item>
        <item name="android:textSize">@dimen/settings_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableTint">@color/black_main</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_main</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_view_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="DeleteSearchButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingVertical">@dimen/padding10</item>
        <item name="android:paddingHorizontal">@dimen/padding12</item>
        <item name="android:tint">@color/black_main</item>
    </style>

</resources>