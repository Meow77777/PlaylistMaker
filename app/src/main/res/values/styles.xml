<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_view_size</item>
        <item name="cornerRadius">@dimen/padding16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding8</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="LayoutSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">@dimen/margin_vertical_settings</item>
        <item name="android:paddingStart">@dimen/padding16</item>
        <item name="android:paddingEnd">@dimen/padding12</item>
    </style>

    <style name="IconSettingsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="TextSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MainBackgroundColorStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="SettingsBackgroundColorStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textSize">@dimen/main_view_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BackButtonSettingsStyle">
        <item name="android:tint">@color/black_main</item>
    </style>

    <style name="TextEditStyle">
        <item name="android:paddingStart">@dimen/padding12</item>
        <item name="android:paddingEnd">@dimen/padding40</item>
        <item name="android:paddingVertical">@dimen/padding10</item>
        <item name="android:drawablePadding">@dimen/padding8</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/settings_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_main</item>
    </style>

    <style name="DeleteSearchButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingVertical">@dimen/padding10</item>
        <item name="android:paddingHorizontal">@dimen/padding12</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="SongSearchListImage">
        <item name="android:layout_width">@dimen/size45</item>
        <item name="android:layout_height">@dimen/size45</item>
        <item name="android:layout_marginVertical">@dimen/padding8</item>
        <item name="android:layout_marginStart">@dimen/size13</item>
    </style>

    <style name="SongSearchListName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/settings_size</item>
    </style>

    <style name="SongSearchListAuthor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:layout_marginEnd">@dimen/size21</item>
        <item name="drawableTint">@color/gray</item>
    </style>

    <style name="SongSearchListTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

</resources>

